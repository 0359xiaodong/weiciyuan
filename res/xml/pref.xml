<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <PreferenceCategory
            android:title="@string/appearance"
            >
        <!--<CheckBoxPreference-->
        <!--android:key="show_picture"-->
        <!--android:title="@string/show_pic"-->
        <!--android:defaultValue="true"/>-->
        <!--android:dependency="show_picture"-->
        <CheckBoxPreference

                android:key="show_big_avatar"
                android:title="@string/show_big_avatar"
                android:summary="@string/show_big_avatar_summary"
                android:defaultValue="false"/>
        <CheckBoxPreference

                android:key="show_big_pic"
                android:title="@string/show_big_pic"
                android:summary="@string/show_big_pic_summary"
                android:defaultValue="false"/>
        <CheckBoxPreference

                android:key="auto_show_big_pic"
                android:title="@string/auto_show_big_pic"
                android:summary="@string/auto_show_big_pic_summary"
                android:defaultValue="true"/>
        <ListPreference
                android:key="font_size"
                android:title="@string/font_size"
                android:summary="@string/only_timeline_font"
                android:dialogTitle="@string/font_size"
                android:entries="@array/font"
                android:entryValues="@array/font_value"
                android:defaultValue="15"/>
        <ListPreference
                android:key="theme"
                android:title="@string/theme"
                android:dialogTitle="@string/theme"
                android:entries="@array/theme"
                android:entryValues="@array/theme_value"
                android:defaultValue="3"/>
        <CheckBoxPreference
                android:key="sound"
                android:title="@string/sound"
                android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:title="@string/new_message"
            >
        <CheckBoxPreference
                android:key="enable_fetch_msg"
                android:title="@string/notification"
                android:summary="@string/enable_fetch_new_msg"
                android:defaultValue="false"/>
        <CheckBoxPreference
                android:dependency="enable_fetch_msg"
                android:key="disable_fetch_at_night"
                android:title="@string/disable_notification_at_night"
                android:summary="@string/disable_notification_at_night_summary"
                android:defaultValue="true"/>
        <ListPreference
                android:dependency="enable_fetch_msg"
                android:key="frequency"
                android:title="@string/frequency"
                android:dialogTitle="@string/frequency"
                android:entries="@array/frequency"
                android:entryValues="@array/frequency_value"
                android:defaultValue="1"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:title="@string/advanced">
        <Preference android:title="@string/download_emotions"
                    android:summary="@string/download_emotions_summary"
                    android:key="download_emotions"
                >
        </Preference>
        <Preference android:title="@string/filter"
                    android:summary="@string/filter_summary"
                    android:key="filter"
                >
            <intent
                    android:targetPackage="org.qii.weiciyuan"
                    android:targetClass="org.qii.weiciyuan.ui.preference.FilterActivity"
                    />
        </Preference>

    </PreferenceCategory>
    <PreferenceCategory
            android:title="@string/other">
        <Preference
                android:key="clear_cache"
                android:title="@string/clear_sd_cache"
                android:summary="@string/clear_avatar_and_pic"
                />
        <Preference
                android:key="official_weibo"
                android:title="@string/official_weibo"
                />
        <Preference
                android:title="@string/about"
                android:summary="@string/about_summary">
            <intent
                    android:targetPackage="org.qii.weiciyuan"
                    android:targetClass="org.qii.weiciyuan.ui.preference.AboutActivity"
                    />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>