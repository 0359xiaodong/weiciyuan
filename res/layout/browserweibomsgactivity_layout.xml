<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        >


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/first">
            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/app"
                    android:id="@+id/avatar" android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp"
                    android:clickable="true"/>

            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/avatar"
                    android:id="@+id/username"/>

        </LinearLayout>

        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/username"
                android:id="@+id/time"/>

        <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textSize="17sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_below="@id/first"
                />

        <FrameLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_toRightOf="@id/avatar"
                android:layout_marginTop="8dp"
                >
            <ImageView
                    android:id="@+id/content_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:clickable="true"
                    />
            <LinearLayout
                    android:id="@+id/repost_layout"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"

                    >
                <TextView
                        android:id="@+id/repost_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="content"
                        android:visibility="gone"
                        android:textSize="17sp"
                        android:lineSpacingMultiplier="1.2"
                        />
                <ImageView
                        android:layout_marginTop="8dp"
                        android:id="@+id/repost_content_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:clickable="true"
                        />
            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>


</ScrollView>