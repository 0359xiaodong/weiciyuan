<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.qii.weiciyuan"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="16"/>


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>


    <application android:label="@string/app_name" android:icon="@drawable/app"
                 android:name="org.qii.weiciyuan.support.utils.GlobalContext"
                 android:theme="@style/AppTheme">
        <activity
                android:name=".ui.login.AccountActivity"
                android:screenOrientation="portrait"
                android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainTimeLineActivity" android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name=".ui.send.StatusNewActivity" android:uiOptions="splitActionBarWhenNarrow"
                  android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name=".ui.login.OAuthActivity" android:label="授权"/>
        <activity android:name=".ui.browser.BrowserWeiboMsgActivity" android:label="detail"/>
        <service android:name=".ui.timeline.TimeLineService"/>
        <receiver android:name=".ui.timeline.NewMsgNotificationBroadcastReceiver"/>

    </application>

</manifest>
